{
  "name": "juan-fernandez-portfolio-2025",
  "version": "2.0.0",
  "private": true,
  "description": "Juan Fernandez's 2025 3D Portfolio with PeachWeb.io-style animations",
  "homepage": "https://juan-fernandez.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/sippinwindex/portfolio"
  },
  "author": {
    "name": "Juan Fernandez",
    "email": "stormblazdesign@gmail.com",
    "url": "https://juan-fernandez.dev"
  },
  "keywords": [
    "portfolio",
    "3d",
    "three.js",
    "react",
    "next.js",
    "peachweb",
    "animations",
    "fullstack",
    "developer"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next/bundle-analyzer": "^14.2.0",
    "@octokit/rest": "^21.0.2",
    "@react-three/drei": "^9.108.4",
    "@react-three/fiber": "^8.16.8",
    "@splinetool/react-spline": "^4.0.0",
    "@splinetool/runtime": "^1.9.28",
    "@tabler/icons-react": "^3.19.0",
    "@vercel/analytics": "^1.3.1",
    "@vercel/speed-insights": "^1.0.12",
    "animejs": "^4.1.3",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.7",
    "gsap": "^3.12.5",
    "lottie-react": "^2.4.0",
    "lucide-react": "^0.445.0",
    "next": "^14.2.0",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.2",
    "tailwind-merge": "^2.5.2",
    "three": "^0.168.0"
  },
  "devDependencies": {
    "eslint-config-next": "^14.2.0",
    "@tailwindcss/typography": "^0.5.15",
    "@types/animejs": "^3.1.13",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@types/three": "^0.168.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.36.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "endOfLine": "lf",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "react/no-unescaped-entities": "off",
      "@next/next/no-page-custom-font": "off"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run type-check"
    }
  },
  "optionalDependencies": {
    "@next/swc-darwin-arm64": "^14.2.0",
    "@next/swc-darwin-x64": "^14.2.0",
    "@next/swc-linux-arm64-gnu": "^14.2.0",
    "@next/swc-linux-x64-gnu": "^14.2.0",
    "@next/swc-win32-arm64-msvc": "^14.2.0",
    "@next/swc-win32-ia32-msvc": "^14.2.0",
    "@next/swc-win32-x64-msvc": "^14.2.0"
  }
}