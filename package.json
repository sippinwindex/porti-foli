{
  "name": "juan-fernandez-portfolio-2025",
  "version": "2.0.0",
  "private": true,
  "description": "Juan Fernandez's 2025 3D Portfolio with GitHub/Vercel integration",
  "homepage": "https://juan-fernandez.dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/sippinwindex/portfolio"
  },
  "author": {
    "name": "Juan Fernandez",
    "email": "stormblazdesign@gmail.com",
    "url": "https://juan-fernandez.dev"
  },
  "keywords": [
    "portfolio",
    "3d",
    "three.js",
    "react",
    "next.js",
    "fullstack",
    "developer"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "analyze": "cross-env ANALYZE=true next build",
    "clean": "rm -rf .next out node_modules package-lock.json",
    "fresh-install": "npm run clean && npm cache clean --force && npm install",
    "prepare": "husky install"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@next/bundle-analyzer": "^14.2.31",
    "@octokit/rest": "^21.1.1",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "@splinetool/react-spline": "^4.1.0",
    "@splinetool/runtime": "^1.10.45",
    "@tabler/icons-react": "^3.34.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "animejs": "^4.1.3",
    "clsx": "^2.1.1",
    "framer-motion": "^11.18.2",
    "gsap": "^3.13.0",
    "lottie-react": "^2.4.1",
    "lucide-react": "^0.445.0",
    "next": "^14.2.31",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.30.1",
    "swr": "^2.2.5",
    "tailwind-merge": "^2.6.0",
    "three": "^0.168.0"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/animejs": "^3.1.13",
    "@types/node": "^22.17.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/three": "^0.168.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.31",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "endOfLine": "lf",
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "extends": [
      "next/core-web-vitals",
      "prettier"
    ],
    "rules": {
      "react/no-unescaped-entities": "off",
      "@next/next/no-page-custom-font": "off"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
